{
  "name": "orenchi-ai-bot",
  "module": "src/index.ts",
  "type": "module",
  "private": false,
  "bin": {
    "orenchi-ai-bot": "./src/index.ts"
  },
  "scripts": {
    "test": "bun test",
    "dev": "bun ./src/index.ts",
    "start": "bun ./src/index.ts",
    "build": "bun build src/index.ts --outfile dist/index.js --target bun",
    "deploy-commands": "bun ./src/deploy-commands.ts",
    "docker:build": "docker build -t orenchi-ai-bot .",
    "docker:run": "docker run -it --rm --env-file .env orenchi-ai-bot",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down"
  },
  "dependencies": {
    "@discordjs/voice": "^0.18.0",
    "@discordjs/opus": "^0.9.0",
    "libsodium-wrappers": "^0.7.13",
    "discord.js": "^14.14.1",
    "openai": "^5.12.2",
    "play-sound": "^1.1.5",
    "prism-media": "^1.3.5",
    "opusscript": "^0.0.8"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
